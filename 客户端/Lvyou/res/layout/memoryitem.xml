<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    android:id="@+id/LinearLayout01"
	android:layout_width="fill_parent" 
	android:layout_height="65dp"
	xmlns:android="http://schemas.android.com/apk/res/android"
	>

	<ImageView
	    android:id="@+id/fImg"
	    android:layout_width="43dip"
	    android:layout_height="43dip"
	    android:layout_centerVertical="true"
	    android:layout_marginLeft="10dp"
	    android:layout_marginTop="12dp"
	    android:src="@drawable/touxiang" >

	</ImageView>
	
	<TextView
	    android:id="@+id/uname"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/fImg"
	    android:layout_marginLeft="12dp"
	    android:text="lala"
	    android:textColor="#6495ED"
	    android:textSize="12sp" >

	</TextView>
	
	<TextView
		android:id="@+id/title0"
		android:text="标题:"
		android:layout_toRightOf="@id/fImg"
		android:layout_marginTop="10dp"
		android:layout_marginLeft="10dp"
		android:textColor="#6495ED"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	>
	</TextView>
	
	<TextView
		android:id="@+id/title1"
		android:layout_toRightOf="@id/title0"
		android:layout_marginTop="10dp"
		android:layout_marginLeft="5dp"
		android:textColor="#6495ED"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	>
	</TextView>
	
	
	<TextView
		android:id="@+id/address0"
		android:text="地点:"
		android:layout_toRightOf="@id/fImg"	
		android:layout_below="@id/title1"
		android:layout_marginLeft="10dp"
		android:textColor="#6495ED"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		>
	</TextView>
	<TextView
		android:id="@+id/address1"
		android:text="lala"
		android:layout_toRightOf="@id/address0"
		android:layout_below="@id/title1"
		android:layout_marginLeft="5dp"
		android:textColor="#6495ED"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		>
	</TextView>
	
	<TextView
		android:id="@+id/content0"
		android:text="内容:"
		android:layout_toRightOf="@id/fImg"
		android:layout_below="@id/address1"
		android:layout_marginLeft="10dp"
		android:textColor="#6495ED"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		>
	</TextView>
	<TextView
		android:id="@+id/content1"
		android:text="lala"
		android:layout_toRightOf="@id/content0"
		android:layout_below="@id/address1"
		android:layout_marginLeft="5dp"
		android:textColor="#6495ED"
		android:layout_width="100dp"
		android:layout_height="wrap_content"
		 android:singleLine="true"
  		android:ellipsize="end"
		
		>
	</TextView>

	<TextView
	    android:id="@+id/content2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_marginTop="55dp"
	    android:textColor="#757575"
	    android:textSize="12sp" >

	</TextView>
</RelativeLayout>
