<ScrollView 
    android:id="@+id/ScrollView01"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<LinearLayout 
	    android:orientation="vertical"
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		android:background="@drawable/ww1"
		android:layout_marginTop="-20dp">

		<ImageView 
		    android:id="@+id/ImageView01"
			android:layout_width="wrap_content" 
			android:layout_height="116dp"
			android:src="@drawable/pagetop"></ImageView>
		<ImageView 
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/youji1"
			android:layout_marginTop="-8dp"/>
		<View android:layout_width="fill_parent" 
		    android:layout_height="1dp"
			android:background="#ffffff" 
			android:layout_marginTop="5dp"></View>
		<LinearLayout
		     android:id="@+id/LinearLayout01"
			android:layout_width="wrap_content"
			 android:layout_height="wrap_content"
			android:layout_marginTop="15px" 
			android:orientation="vertical">
			<TextView android:text="标题:" 
			    android:id="@+id/TextView01"
				android:layout_marginLeft="15dp" 
				android:textColor="#6495ED"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"></TextView>
			
			<EditText
			    android:id="@+id/title"
			    android:layout_width="180px"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="15dp"
			    android:layout_marginTop="5px"
			    android:hint="title" >
</EditText>
		
			

</LinearLayout>

		<LinearLayout android:id="@+id/LinearLayout06" 
		    android:layout_marginTop="10dp"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:background="@drawable/bg2" 
			android:orientation="vertical">
		<LinearLayout android:id="@+id/LinearLayout02"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:orientation="vertical" 
			android:layout_marginTop="15px">
			<TextView 
			    android:text="地点:" 
			    android:id="@+id/TextView02"
				android:layout_marginLeft="15dp" 
				android:textColor="#6495ED"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content">
			</TextView>
			
			
			<LinearLayout android:id="@+id/LinearLayout03"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:orientation="horizontal" 
				android:layout_marginLeft="15dp">
				
				
				<Spinner 
				    android:id="@+id/Spinner01" 
				    android:layout_width="wrap_content"
					android:layout_marginTop="5px" 
					android:layout_height="wrap_content"></Spinner>
				<Spinner 
				    android:id="@+id/Spinner02" 
				    android:layout_width="wrap_content"
					android:layout_marginTop="5px"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					></Spinner>
				<Spinner 
					android:id="@+id/Spinner03" 
					android:layout_width="wrap_content"
					android:layout_marginTop="5px" 
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					></Spinner>
			</LinearLayout>
		</LinearLayout>


		<LinearLayout 
		    android:id="@+id/LinearLayout04"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:layout_marginTop="15px" 
			android:orientation="vertical">

			<TextView android:text="游记内容:" 
			    android:id="@+id/TextView03"
				android:layout_marginLeft="15dp" 
				android:textColor="#6495ED"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"></TextView>

			<EditText
			    android:id="@+id/contentt"
			    android:layout_width="290dp"
			    android:layout_height="220px"
			    android:layout_marginLeft="15dp"
			    android:layout_marginTop="5px" 
			    android:hint="快来分享吧~">
</EditText>

		</LinearLayout>



		<LinearLayout android:id="@+id/LinearLayout05"
			android:layout_marginTop="15px" android:layout_width="wrap_content"
			android:layout_height="wrap_content">

			<Button
			    android:id="@+id/fabu"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="15dp"
			    android:text="发布记忆" >
</Button>

			<Button
			    android:id="@+id/savejy"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="20px"
			    android:text="保存记忆" >
</Button>
